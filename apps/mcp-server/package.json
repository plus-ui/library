{
  "name": "@plusui/mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Plus UI Library - provides component discovery and usage assistance",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "docker:build": "docker build -t plusui-mcp .",
    "docker:run": "docker run -p 8555:8555 plusui-mcp",
    "docker:compose": "docker compose up --build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/node": "^22.15.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "typescript": "^5.8.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "mcp",
    "plus-ui",
    "web-components",
    "ui-library",
    "component-discovery"
  ],
  "author": "Plus UI Team",
  "license": "MIT"
}