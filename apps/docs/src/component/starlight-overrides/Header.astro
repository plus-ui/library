---
import config from "virtual:starlight/user-config";

import LanguageSelect from "virtual:starlight/components/LanguageSelect";
import Search from "virtual:starlight/components/Search";
import SiteTitle from "virtual:starlight/components/SiteTitle";
import SocialIcons from "virtual:starlight/components/SocialIcons";
import ThemeSelect from "virtual:starlight/components/ThemeSelect";

/**
 * Render the `Search` component if Pagefind is enabled or the default search component has been overridden.
 */
const shouldRenderSearch =
  config.pagefind ||
  config.components.Search !== "@astrojs/starlight/components/Search.astro";
---

<div class="header">
  <div class="title-wrapper sl-flex">
    <SiteTitle />
  </div>
  <div class="sl-flex print:hidden">
    {shouldRenderSearch && <Search />}
  </div>
  <div class="sl-hidden md:sl-flex print:hidden right-group">
    <ThemeSelect />
    <div class="sl-flex social-icons">
      <SocialIcons />
    </div>
    <LanguageSelect />

    <plus-button kind="text" size="sm"> Sign in </plus-button>
    <plus-button status="primary" size="sm">
      Get all-access <i class="fa-solid fa-chevron-right"></i>
    </plus-button>
  </div>
</div>

<style>
  @layer starlight.core {
    .header {
      display: flex;
      gap: var(--sl-nav-gap);
      justify-content: space-between;
      align-items: center;
      height: 100%;
      max-width: none;
      margin: 0 auto;
    }

    .title-wrapper {
      /* Prevent long titles overflowing and covering the search and menu buttons on narrow viewports. */
      overflow: clip;
      /* Avoid clipping focus ring around link inside title wrapper. */
      padding: 0.25rem;
      margin: -0.25rem;
      min-width: 0;
    }

    .right-group,
    .social-icons {
      gap: 1rem;
      align-items: center;
    }
    .social-icons::after {
      content: "";
      height: 1.5rem;
      border-inline-end: 1px solid var(--background-color-color-divider);
    }

    @media (min-width: 1400px) {
      .header {
        /* Geniş ekranlarda özel layout */
        max-width: 1400px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 
          /* 1. Logo alanı - sidebar genişliği kadar */
          16rem
          /* 2. Search alanı - kalan alan */
          1fr
          /* 3. Right group - ihtiyaca göre */
          auto;
        gap: var(--sl-nav-gap);
        align-content: center;
        padding-left: 1rem;
        padding-right: 1rem;
      }
    }
  }

  .header-container {
    max-width: 1280px;
    margin: 0 auto;
    padding-left: 1rem;
    padding-right: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }
</style>
